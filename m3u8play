<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>HLS Video Player</title>
  <style type="text/css">
    body {
      margin: 0;
      padding: 0;
      background: black;
      height: 100vh;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    video {
      width: 100%;
      height: 100%;
      background: black;
    }
  </style>
</head>
<body>
  <video id="player" autoplay="autoplay" muted="muted" playsinline="playsinline"></video>

  <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
  <script type="text/javascript">
    var urlParams = new URLSearchParams(window.location.search);
    var videoUrl = urlParams.get('link');

    var player = document.getElementById('player');

    if (videoUrl) {
      if (Hls.isSupported()) {
        var hls = new Hls();
        hls.loadSource(videoUrl);
        hls.attachMedia(player);
        hls.on(Hls.Events.MANIFEST_PARSED, function() {
          player.play();
        });
      } else if (player.canPlayType('application/x-mpegURL')) {
        // Safari hỗ trợ natively HLS
        player.src = videoUrl;
        player.addEventListener('canplay', function() {
          player.play();
        });
      } else {
        document.body.innerHTML = "<h2 style='color:white;text-align:center;margin-top:20px;'>Trình duyệt không hỗ trợ HLS!</h2>";
      }
    } else {
      document.body.innerHTML = "<h2 style='color:white;text-align:center;margin-top:20px;'>Không tìm thấy link video!</h2>";
    }
  </script>
</body>
</html>
